server {
	listen 80;
	listen [::]:80;

	### IRPG ### {{{
	location /irpg/ {
		alias /var/www/irpg/;
		index /irpg/idlerpg.html;
		try_files $uri $uri/ /irpg/idlerpg.html =404;

		location ~ \.php$ {
				try_files $uri =404;
				fastcgi_pass unix:/var/run/php5-fpm.sock;
				fastcgi_index index.php;
				fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
				include fastcgi_params;
		}

		location /irpg/(php|js|css) {
			access_log off;
		}
	}
	### End IRPG ### }}}
}
