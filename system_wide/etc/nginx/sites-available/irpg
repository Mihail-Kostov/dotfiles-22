server {
	listen 80;

	### IRPG ### {{{
	location /irpg {
		alias /var/www/irpg;
	}

	location ~ /irpg/.+\.php$ {
		try_files $uri =404;
		fastcgi_pass unix:/var/run/php5-fpm.sock;
		fastcgi_param SCRIPT_FILENAME /var/www/irpg$fastcgi_script_name;
		include fastcgi_params;
	}

	#location ~/irpg/(css|php|js)/.* {
		#access_log off;
	#}
	### End IRPG ### }}}
}
